# VIP Mudanças - Variáveis de Ambiente

# OpenAI API (obrigatório para IA Mirante e Vision)
OPENAI_API_KEY=sk-sua_chave_openai_aqui

# Banco de Dados MongoDB
MONGODB_URI=mongodb://localhost:27017/vip_mudancas
# Para MongoDB Atlas (produção):
# MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/vip_mudancas

# JWT Secret (para autenticação)
JWT_SECRET=sua_chave_secreta_jwt_muito_segura_aqui

# CORS Origins (URLs permitidas)
CORS_ORIGINS=http://localhost:5173,https://seudominio.vercel.app

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=false

# Upload de Arquivos
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Configurações de Email (opcional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_app

# Integrações (opcional)
GOOGLE_CALENDAR_CREDENTIALS=caminho/para/credentials.json
WHATSAPP_API_TOKEN=seu_token_whatsapp
MANYCHAT_API_TOKEN=seu_token_manychat

# Configurações de Produção
PYTHONPATH=backend/src

